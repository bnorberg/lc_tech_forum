<h2>Listing comments</h2>

<table class="home">
  <tr>
    <th>Post</th>
    <th>Title</th>
    <th>Date</th>
    <th>Patron request</th>
    <th>Consultation summary</th>
    <th>Resources used</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.post_id %></td>
    <td><%= comment.title %></td>
    <td><%= comment.date %></td>
    <td><%= comment.patron_request %></td>
    <td><%= comment.consultation_summary %></td>
    <td><%= comment.resources_used %></td>
    <td><%= comment.status %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

