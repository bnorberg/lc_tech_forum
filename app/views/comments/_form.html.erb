<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />

  <div class="field">
    <%= f.hidden_field :post_id %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
<% if current_user %>
	<%= f.text_field :author, :value => current_user.username %>
<% else %>
	<%= f.text_field :author %>
<% end %>
  </div>	
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
<div class="field">
    <%= f.label :consultation_summary, "Reply" %><br />
    <%= f.text_area :consultation_summary %>
  </div>
  <% if current_user %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id, :class => 'select_size' %>
  </div><% end %>
<br />
  <div class="actions" style="float:left">
    <%= f.submit %></span>
  </div>
<% end %>
<div class="cancel"><span class="sbutton"><%= link_to 'Cancel', post_path(@comment.post_id) %></span></div>
<br /><br />
