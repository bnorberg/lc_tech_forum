<%= search_form_for @q do |f| %>	
<div class="new_home">
	<span class="directions"><%= link_to 'How to Use', '/directions.html', :target => '_blank' %></span>
 <div id="title_cont">
  		<%= f.text_field :title_cont %>  <%= f.submit %></div>	
<div class="auth">
	<br />
<% if current_user %>
  <span class="logout"><%= link_to "Log out", logout_path %></span>
 Logged in as <%= current_user.username %> (<%= current_user.reputation_for(:votes).to_i %>). 
<% else %>
  <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
<% end %>	
</div><p><%= link_to '+ Add New Topic', new_post_path, class: "new_post" %> </p><br /><br /></div>
<% if @posts.empty? %>
  <h2> <span style="font-size:16pt; font-weight:normal; font-family:Arial, Helvetica, sans-serif; color:red">There are no posts that match your query.  Please try a <%= link_to 'new search', posts_path, :class => 'new_search' %>.</span></h2>
<% else %>
<p class="paginate"><%= will_paginate @posts %></p><br />
<table class="home">
  <tr>
    <th>Topic</th>
    <th>Original Creator</th>
	<th>Posts</th>
    <th>Last Updated</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post, class: 'post_title' %></td>
    <td><%= post.author %></td>
	<td><%= post.comments.count + 1 %></td>
	<td><%= post.updated_at.localtime.to_s.sub(/\-\d\d\d\d/, '') %></td>
  </tr>
<% end %>
</table>

<br />
<% end %>
<% end %>
