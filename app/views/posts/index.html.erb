<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Last Updated</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post, class: 'post_title' %></td>
    <td><%= post.status %></td>
	<td><%= post.updated_at %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path, class: "new_post" %>
