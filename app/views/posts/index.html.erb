<h1 class="new_home"><p><%= link_to '+ Add New Topic', new_post_path, class: "new_post" %></p></h1>

<table class="home">
  <tr>
    <th>Topic</th>
    <th>Status</th>
	<th>Posts</th>
    <th>Last Updated</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post, class: 'post_title' %></td>
    <td><%= post.status %></td>
	<td><%= post.comments.count + 1 %></td>
	<td><%= post.updated_at.localtime.to_s.sub('-0500', '') %></td>
  </tr>
<% end %>
</table>

<br />

