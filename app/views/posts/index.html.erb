<%= search_form_for @q do |f| %>
<div class="new_home">
 <div id="title_cont">
  		<%= f.text_field :title_cont %>  <%= f.submit %></div>	
<div class="auth">
	<br />
<% if current_user %>
  <span class="logout"><%= link_to "Log out", logout_path %></span>
 Logged in as <%= current_user.username %> (<%= current_user.reputation_for(:posts).to_i %>). 
<% else %>
  <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
<% end %>	
</div><p><%= link_to '+ Add New Topic', new_post_path, class: "new_post" %></p><br /><br /></div>
<p class="paginate"><%= will_paginate @posts %></p><br />
<table class="home">
  <tr>
    <th>Topic</th>
    <th>Status</th>
	<th>Posts</th>
    <th>Last Updated</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post, class: 'post_title' %></td>
    <td><%= post.status %></td>
	<td><%= post.comments.count + 1 %></td>
	<td><%= post.updated_at.localtime.to_s.sub('-0500', '') %></td>
  </tr>
<% end %>
</table>

<br />
<% end %>
